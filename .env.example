# Park Angel System Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# For Expo/React Native apps
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration (for direct connections if needed)
DB_HOST=db.your_supabase_project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_database_password

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Application URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
EXPO_PUBLIC_SITE_URL=parkangel://auth

# Feature Flags
MFA_ENABLED=true
MFA_ENFORCED=false
REALTIME_ENABLED=true
REALTIME_EVENTS_PER_SECOND=10
REALTIME_MAX_CONNECTIONS=100
ANALYTICS_ENABLED=true
MONITORING_ENABLED=true
DEBUG_ENABLED=false

# Payment Gateways
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Local Payment Gateways (Philippines)
GCASH_MERCHANT_ID=your_gcash_merchant_id
GCASH_API_KEY=your_gcash_api_key
PAYMAYA_PUBLIC_KEY=pk-your_paymaya_public_key
PAYMAYA_SECRET_KEY=sk-your_paymaya_secret_key

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@parkangel.com
SENDGRID_FROM_NAME=Park Angel

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Maps and Navigation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token

# Error Tracking and Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Analytics
GOOGLE_ANALYTICS_ID=GA-your_google_analytics_id
MIXPANEL_TOKEN=your_mixpanel_token

# File Storage (if using external CDN)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=park-angel-assets

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Environment
NODE_ENV=development
PORT=3000

# Security
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Backup and Maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
MAINTENANCE_MODE=false

# Development Tools
STORYBOOK_ENABLED=true
CYPRESS_ENABLED=true
PLAYWRIGHT_ENABLED=true