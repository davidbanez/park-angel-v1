{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@park-angel/shared": [
        "../shared/src"
      ],
      "@park-angel/shared/*": [
        "../shared/src/*"
      ]
    },
    "jsx": "react-native",
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "composite": true,
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
